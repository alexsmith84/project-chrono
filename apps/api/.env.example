# Server Configuration
NODE_ENV=development
PORT=3000

# Database (PostgreSQL 17)
DATABASE_URL=postgresql://postgres:password@localhost:5432/project_chrono_dev
DATABASE_POOL_SIZE=20
DATABASE_TIMEOUT_MS=5000

# Redis
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL=60

# Authentication
# Internal API keys (comma-separated for multiple keys)
INTERNAL_API_KEYS=chrono_internal_dev_key_001
# Public API keys (comma-separated)
PUBLIC_API_KEYS=chrono_public_dev_key_001
# Admin API keys (comma-separated)
ADMIN_API_KEYS=chrono_admin_dev_key_001

# Rate Limits (requests per minute)
RATE_LIMIT_INTERNAL=5000
RATE_LIMIT_PUBLIC_FREE=1000
RATE_LIMIT_PUBLIC_PAID=10000
RATE_LIMIT_ADMIN=0  # 0 = unlimited

# Observability
LOG_LEVEL=info
METRICS_ENABLED=true

# WebSocket
WS_HEARTBEAT_INTERVAL=30000  # milliseconds
WS_MAX_CONNECTIONS=10000
